<h1> Update a post you already made </h1>

<%= @post = Post.find(params[:id]) %>
<%= form_for @post do |post_var| %>
    <%= post_var.label :title %>
    <%= post_var.text_field :title %>
    <%= post_var.label :content %>
    <%= post_var.text_field :content %>
    
    <%= post_var.submit "Share your post!" %>
<% end %>