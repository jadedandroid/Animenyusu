<h1> Make a Post </h1>

<%= form_for @post do |p| %>
    <%= p.label :title %>
    <%= p.text_field :title %>

    <%= p.label :content %>
    <%= p.text_field :content %>

    <%= p.label :anime_id %>
    <%= p.collection_select :anime_id, @animes, :id, :name %>

    <%= p.label :tag_id %>
    <%= p.collection_select :tag_id, @tags, :id, :genre%>
    
    <%= p.submit "Share your post!" %>
<% end %>
