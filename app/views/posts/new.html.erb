<h1> Make a Post </h1>

<%= form_for @post do |p| %>
    <%= p.label :title %>
    <%= p.text_field :title %>

    <%= p.label :content %>
    <%= p.text_field :content %>

    <%= p.label :tag_id %>
    <%= p.collection_select :tag_id, @tag, :id, :genre%>

    <%= p.label :anime_id %>
    <%= p.collection_select :anime_id, @anime, :id, :AnimeOptions %>

    
    <%= p.submit "Share your post!" %>
<% end %>
