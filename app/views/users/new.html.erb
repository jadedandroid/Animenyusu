<h1> Create an account to access the wonderful world of anime </h1>

<% if @errors %>
  <% @errors.each do |error|%>
     <%= error %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :Username %>
  <%= f.text_field :username %> <br>
  <%= f.label :Password %>
  <%= f.password_field :password %><br>
  <%= f.submit "Create account!" %>
<% end %>